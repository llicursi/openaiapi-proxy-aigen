# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Default indentation for all files
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab 